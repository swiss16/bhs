<Window x:Class="DA_Buchhaltung.MainWindow"
        DataContext="{Binding ViewModel, RelativeSource={RelativeSource Self}}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Nailart Financial Manager" WindowStartupLocation="CenterScreen" Width="auto" Height="auto">
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="100" Margin="150,114,0,0" VerticalAlignment="Top" Width="772" ItemsSource="{Binding CustomerCollection}" SelectedIndex="{Binding SelectedKundenIndex}" SelectedItem="{Binding AktuellerKunde}"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="150,69,0,0" VerticalAlignment="Top" Width="75" Command="{Binding LadeKundenCommand}" CommandParameter="{Binding IstKundenAktiv}"/>

    </Grid>
</Window>
